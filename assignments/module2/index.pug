- var title = "Check-off Shopping List";
- var stage = "in preliminary stage: layout";
doctype html
html
  head
    title Coursera assigment 2 - #{title}
    block scripts
      script(src='angular.min.js')
      script(src='app.js')
  body
    block content
    h1 This is #{title}
    #to-buy
      h2 To Buy
      ul
        each o in to_buy
          li
            label
              | Buy #{o.quantity} of #{o.name}
              button Bought
    #bought
      h2 Already bought
      p Nothing bought yet
      ul
    hr
    block foot
      #footer
        p This version is #{stage}.
